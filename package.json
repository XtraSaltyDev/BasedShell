{
  "name": "basedshell",
  "version": "1.0.2",
  "description": "A modern terminal emulator with glassmorphic UI",
  "main": "dist/main/main.js",
  "scripts": {
    "postinstall": "node scripts/fix-node-pty-helper.mjs",
    "clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "dev:preflight": "node scripts/check-dev-port.mjs",
    "dev:renderer": "vite --config vite.config.ts --port 5173 --strictPort",
    "dev:main": "electronmon .",
    "dev": "npm run dev:preflight && concurrently -n renderer,main \"npm run dev:renderer\" \"wait-on tcp:5173 && cross-env NODE_ENV=development npm run dev:main\"",
    "check:dom-contract": "node scripts/check-dom-contract.mjs",
    "typecheck": "npm run check:dom-contract && tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "start": "electron .",
    "package:mac": "npm run build && electron-builder --mac --config electron-builder.yml"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "electron-updater": "^6.3.9",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "wait-on": "^7.2.0"
  }
}
